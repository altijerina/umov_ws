<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="arduinobot">

    <xacro:arg name="is_sim" default="true" />

    <!-- Include Gazebo Parameters -->
    <xacro:include filename="$(find description)/urdf/arduinobot_gazebo.xacro" />

    <!-- Include ros2_control Plugins -->
    <xacro:include filename="$(find description)/urdf/arduinobot_ros2_control.xacro" />

    <xacro:include filename="$(find description)/urdf/common_properties.xacro" />

    <!-- Useful XACRO Variables (Properties) -->
    <xacro:property name="PI" value="3.14159265359" />
    <xacro:property name="effort" value="30.0" />
    <xacro:property name="velocity" value="10.0" />
    <xacro:property name="scale" value="0.01 0.01 0.01"/>

    <!-- Useful Macros -->
    <xacro:macro name="default_inertia" params="mass">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="${mass}" />
            <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                     iyy="1.0" iyz="0.0"
                     izz="1.0" />
        </inertial>
    </xacro:macro>

    <xacro:macro name="default_transmission" params="number">
        <transmission name="transmission_${number}">
            <plugin>transmission_interface/SimpleTransmission</plugin>
            <actuator name="motor_${number}" role="actuator1"/>
            <joint name="joint_${number}" role="joint1">
                <mechanical_reduction>1.0</mechanical_reduction>
            </joint>
        </transmission>
    </xacro:macro>

    <link name="world"/>

    <link name="base_link">
        <xacro:default_inertia mass="1.0"/>
        <visual>
            <origin rpy="0 0 0" xyz="-0.5 -0.5 0"/>
            <geometry>
                <mesh filename="file://$(find description)/meshes/basement.STL" scale="${scale}"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="-0.5 -0.5 0"/>
            <geometry>
                <mesh filename="file://$(find description)/meshes/basement.STL" scale="${scale}"/>
            </geometry> 
        </collision>
    </link>

    <link name="base_plate">
        <xacro:default_inertia mass="0.1"/>
         <visual>
            <origin rpy="0 0 0" xyz="-0.39 -0.39 -0.56"/>
            <geometry>
                <mesh filename="file://$(find description)/meshes/base_plate.STL" scale="${scale}"/>
            </geometry>
            <material name="red"/>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="-0.39 -0.39 -0.56"/>
            <geometry>
                <mesh filename="file://$(find description)/meshes/base_plate.STL" scale="${scale}"/>
            </geometry> 
        </collision>
    </link>

    <link name="rgb_camera">
        <xacro:default_inertia mass="0.001"/>
        <visual>
            <origin rpy="-1.57 0 -1.57" xyz="-0.1 0.125 0.15"/>
            <geometry>
                <mesh filename="file://$(find description)/meshes/pi_camera.STL" scale="${scale}"/>
            </geometry>
        </visual>
        <collision>
            <origin rpy="-1.57 0 -1.57" xyz="-0.1 0.125 0.15"/>
            <geometry>
                <mesh filename="file://$(find description)/meshes/pi_camera.STL" scale="${scale}"/>
            </geometry> 
        </collision>
    </link>

    <link name="forward_drive_arm">
        <xacro:default_inertia mass="0.1"/>
        <visual>
            <origin rpy="0 -${PI / 2} ${PI / 2}" xyz="0.19 0.06 -0.08"/>
            <geometry>
                <mesh filename="file://$(find description)/meshes/forward_drive_arm.STL" scale="${scale}"/>
            </geometry>
            <material name="purple"/>
        </visual>
        <collision>
            <origin rpy="0 -${PI / 2} ${PI / 2}" xyz="0.19 0.06 -0.08"/>
            <geometry>
                <mesh filename="file://$(find description)/meshes/forward_drive_arm.STL" scale="${scale}"/>
            </geometry> 
        </collision>
    </link>

    <link name="horizontal_arm">
        <xacro:default_inertia mass="0.1"/>
        <visual>
            <origin rpy="${PI / 2} 0 ${PI / 2}" xyz="-0.03 -0.4 -0.06"/>
            <geometry>
                <mesh filename="file://$(find description)/meshes/horizontal_arm.STL" scale="${scale}"/>
            </geometry>
            <material name="turquoise"/>
        </visual>
        <collision>
            <origin rpy="${PI / 2} 0 ${PI / 2}" xyz="-0.03 -0.4 -0.06"/>
            <geometry>
                <mesh filename="file://$(find description)/meshes/horizontal_arm.STL" scale="${scale}"/>
            </geometry> 
        </collision>
    </link>

    <link name="claw_support">
        <xacro:default_inertia mass="0.05"/>
        <visual>
            <origin rpy="0 0 ${PI / 2}" xyz="0 -0.05 -0.15"/>
            <geometry>
                <mesh filename="file://$(find description)/meshes/claw_support.STL" scale="${scale}"/>
            </geometry>
            <material name="yellow"/>
        </visual>
        <collision>
            <origin rpy="0 0 ${PI / 2}" xyz="0 -0.05 -0.15"/>
            <geometry>
                <mesh filename="file://$(find description)/meshes/claw_support.STL" scale="${scale}"/>
            </geometry> 
        </collision>
    </link>

    <link name="gripper_right">
        <xacro:default_inertia mass="0.01"/>
        <visual>
            <origin xyz="-0.1 0.50 -0.1" rpy="0 0 -${PI / 2}"/>
            <geometry>
                <mesh filename="file://$(find description)/meshes/right_finger.STL" scale="${scale}"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <origin xyz="-0.1 0.50 -0.1" rpy="0 0 -${PI / 2}"/>
            <geometry>
                <mesh filename="file://$(find description)/meshes/right_finger.STL" scale="${scale}"/>
            </geometry> 
        </collision>
    </link>

    <link name="gripper_left">
        <xacro:default_inertia mass="0.01"/>
        <visual>
            <origin xyz="-0.04 0.50 -0.1" rpy="0 0 -${PI / 2}"/>
            <geometry>
                <mesh filename="file://$(find description)/meshes/left_finger.STL" scale="${scale}"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <origin xyz="-0.04 0.50 -0.1" rpy="0 0 -${PI / 2}"/>
            <geometry>
                <mesh filename="file://$(find description)/meshes/left_finger.STL" scale="${scale}"/>
            </geometry> 
        </collision>
    </link>

    <joint name="virtual_joint" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
    </joint> 

    <joint name ="joint_1" type="revolute">
        <parent link="base_link"/>
        <child link = "base_plate"/>
        <origin xyz="0 0 0.307"/>
        <axis xyz="0 0 1"/>
        <limit lower="-${PI/ 2}" upper="${PI / 2}" 
               effort="${effort}" velocity="${velocity}"/>
    </joint> 

    <joint name="rgb_camera_link" type="fixed">
        <parent link="base_link"/>
        <child link="rgb_camera"/>
        <origin xyz="0 0.45 0.2" rpy="0 -0.1 1.57"/>
        </joint>

    <joint name="joint_2" type="revolute">
        <parent link="base_plate"/>
        <child link="forward_drive_arm"/>
        <origin xyz="-0.02 0 0.35"/>
        <axis xyz="1 0 0"/>
        <limit lower="-${PI / 2}" upper="${PI / 2}" effort="${effort}" velocity="${velocity}"/>
    </joint> 

    <joint name="joint_3" type="revolute">
        <parent link="forward_drive_arm"/>
        <child link="horizontal_arm"/>
        <origin xyz="0 0 0.8"/>
        <axis xyz="1 0 0"/>
        <limit lower="-${PI / 2}" upper="${PI / 2}" effort="${effort}" velocity="${velocity}"/>
    </joint> 

    <joint name="joint_4" type="revolute">
        <parent link="horizontal_arm"/>
        <child link="claw_support"/>
        <origin xyz="0 0.82 0"/> 
        <axis xyz="1 0 0"/>
        <limit lower="-${PI / 2}" upper="${PI / 2}" effort="${effort}" velocity="${velocity}"/>
    </joint> 

    <joint name="joint_5" type="revolute">
        <parent link="claw_support"/>
        <child link="gripper_right"/>
        <origin xyz="-0.04 0.13 -0.1"/> 
        <axis xyz="0 0 1"/>
        <limit lower="-${PI / 2}" upper="0.0" effort="${effort}" velocity="${velocity}"/>
    </joint> 

    <joint name="joint_6" type="revolute">
        <parent link="claw_support"/>
        <child link="gripper_left"/>
        <origin xyz="-0.22 0.13 -0.1"/> 
        <axis xyz="0 0 1"/>
        <limit lower="0.0" upper="${PI / 2}" effort="${effort}" velocity="${velocity}"/>
        <mimic joint="joint_5" multiplier="-1"/> 
    </joint>

